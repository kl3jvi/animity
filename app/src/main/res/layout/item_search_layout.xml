<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="clickListener"
            type="android.view.View.OnClickListener"/>

       <variable
           name="animeInfo"
           type="com.kl3jvi.animity.data.model.ui_models.Media" />

        <variable
            name="isVisible"
            type="boolean" />
    </data>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="85dp"
    android:layout_marginBottom="0dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/backgroundCard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:layout_marginBottom="2dp"
        android:clickable="true"
        android:onClick="@{clickListener}"
        android:elevation="5dp"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackgroundBorderless"
        app:cardBackgroundColor="@color/darkBlue"
        app:cardCornerRadius="@dimen/roundedImageRadius">

        <androidx.cardview.widget.CardView
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:elevation="0dp"
            app:cardCornerRadius="@dimen/roundedImageRadius">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                app:image="@{animeInfo.coverImage.large}"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"
                android:scaleType="centerCrop"
                tools:ignore="RtlHardcoded" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="64dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/imageText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:textColor="@color/textColor"
                android:textSize="17sp"
                android:textStyle="bold"
                android:text="@{animeInfo.title.romaji}"
                tools:text="@string/no_data" />

            <TextView
                android:id="@+id/imageTextExtra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:text="@{animeInfo.countryOfOrigin}"
                android:textColor="@color/grayTextColor"
                android:textSize="13sp"
                android:textStyle="bold"
                tools:text="@string/no_data" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>
</layout>